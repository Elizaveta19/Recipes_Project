<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true"
        android:drawable="@drawable/ic_minus_circle" /> <!-- checked -->
    <item android:state_checked="false"
        android:drawable="@drawable/ic_plus_circle_outline" /> <!-- unchecked -->
    <item android:state_focused="true"
        android:drawable="@drawable/ic_minus" />    <!--on focus-->
    <item android:drawable="@drawable/ic_plus_circle_outline" /> <!-- default -->
</selector>