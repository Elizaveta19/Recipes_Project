<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text1"
            android:textSize="@dimen/title_font"
            android:textColor="@color/colorBlack"
            android:text="This is text1"
            android:layout_marginTop="@dimen/separator"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:id="@+id/text2"
            android:text="This is text2"
            android:layout_marginTop="@dimen/separator_item_recipe"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:id="@+id/text3"
            android:text="This is text3"
            android:layout_marginBottom="@dimen/separator"/>


    </LinearLayout>
</LinearLayout>